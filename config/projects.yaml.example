  - name: junkgems-backend
    github_repo: bensharpe/JunkGems
    github_path: backend/  # Subfolder in the repo where code lives
    sentry_project: junkgems-backend  # Must match your Sentry project slug
    slack_channel: "#junkgems-errors"  # Channel for notifications

